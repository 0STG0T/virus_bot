# ==============================================
# Virus Bot - Конфигурация Docker
# ==============================================

# СИСТЕМНЫЕ ПАРАМЕТРЫ
# -------------------

# User ID и Group ID для доступа к файлам (автоопределение)
# Linux/macOS: Оставьте пустым - определится автоматически
# Windows: Установите 1000
UID=
GID=

# ОБЯЗАТЕЛЬНЫЕ ПАРАМЕТРЫ
# ----------------------

# Telegram Bot Token (получить у @BotFather)
VIRUS_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Telegram Chat ID для уведомлений (ваш личный ID или ID группы)
# Узнать свой ID: https://t.me/userinfobot
LOG_CHAT_ID=123456789

# Telegram API credentials (получить на https://my.telegram.org/apps)
API_ID=12345678
API_HASH=abcdef1234567890abcdef1234567890


# ОПЦИОНАЛЬНЫЕ ПАРАМЕТРЫ
# ----------------------

# Максимальное количество одновременных сессий (по умолчанию: 100)
MAX_CONCURRENT_SESSIONS=100

# Автоматические платные спины
# Включить автоматические спины при достижении порога (по умолчанию: true)
AUTO_SPIN_ENABLED=true

# Порог звезд для автоматических платных спинов (по умолчанию: 200)
AUTO_SPIN_THRESHOLD=200

# Автоматический обмен подарков
# Включить автоматический обмен дешевых подарков (по умолчанию: true)
AUTO_GIFT_EXCHANGE_ENABLED=true

# Порог стоимости для автоматического обмена подарков в звездах (по умолчанию: 50)
AUTO_GIFT_EXCHANGE_THRESHOLD=50

# Режим производительности
# Уменьшенное логирование для повышения производительности (по умолчанию: false)
REDUCED_LOGGING_MODE=false

# Режим максимальной производительности (по умолчанию: true)
PERFORMANCE_MODE=true


# ИНСТРУКЦИИ ПО ИСПОЛЬЗОВАНИЮ
# ----------------------------
# 1. Скопируйте этот файл в .env:
#    cp .env.example .env
#
# 2. Замените значения на свои реальные данные
#
# 3. Поместите ваши .session файлы в папку sessions/
#
# 4. Запустите бота:
#    docker-compose up -d
#
# 5. Просмотр логов:
#    docker-compose logs -f
#
# 6. Остановка бота:
#    docker-compose down
